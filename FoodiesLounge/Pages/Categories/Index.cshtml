@page
@model FoodiesLounge.Pages.Categories.IndexModel
@{
       ViewData["Title"] = "Category page";
}
<partial name="_Notification"></partial>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
          <div class="col-6">
           <a asp-page = "create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered  table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                 <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categories)
            {
                 <tr>
                <td> @obj.name </td>
                <td>@obj.DisplayOrder </td>
                <td>
                    <a asp-page="Edit" asp-route-id ="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id ="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i>
                        </a>

                </td>
            </tr>
            }
           

        </tbody>
    </table>
</div>